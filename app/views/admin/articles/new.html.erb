<div class="row new-article-form">

  <%= form_for([:admin, @article], html: {class: "form-group"}) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
    <br />
    <%= f.label :body %>
    <%= f.text_area :body, :class => "form-control" %>
    <br />
    <%= f.submit "Create", :class => "btn btn-success" %>

  <% end %>

</div>
